#!/bin/env sh

# This argument will download some packages.
packages_arg="++"

cd "$(dirname "$0")"
ln -sf "$PWD/nano/.nanorc" "$HOME/.nanorc"

for arg in "$@"; do
    if [ "$arg" = "$packages_arg" ]; then
        echo "Installing packages."
        sudo apt install \
            build-essential git \
            entr \
            dmd ldc \
            wine gimp inkscape
    fi
done;

echo "Done!"
